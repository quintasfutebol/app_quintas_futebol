<div class="max-w-md mx-auto mt-16">
  <h2 class="text-2xl font-bold text-gray-800 mb-6">Select an account</h2>
  <ul class="space-y-4">
    <% @accounts.each do |account| %>
      <li>
        <%= link_to set_account_path(account.slug),
          class: "block px-4 py-3 rounded-xl border border-gray-300 hover:bg-gray-100 transition" do %>
          <span class="text-lg font-medium text-gray-800"><%= account.name %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
